<style>
    .button {
        background-color: cornflowerblue;
        border: double;
        color: white;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

    .column {
        float: left;
        width: 33.33%;
        padding: 5px;
    }


    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    img:hover {
        -webkit-transform: scaleX(-1);
        transform: scaleX(-1);
    }
</style>
